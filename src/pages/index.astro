<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>La Velada del Ano - un proyecto educativo</title>
		<link rel="preload" href="/fonts/BOXING.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
		<link rel="preload" href="/fonts/BOXING-striped.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
	</head>

	<body>

	

		<header class="relative">
			<div class="md:absolute md:left-1/2 md:-translate-x-1/2 flex flex-col gap-1 justify-center items-center mt-4 md:mt-0 md:top-8 z-10">

				<img 
				class="w-32 lg:w-64 h-auto"
				src="/boxer/logo.webp" 
				alt="logo de la velada del año, tercera edición"/>
				<h1 class="font-boxing text-5xl text-center text-white font-bold">
					<span class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-400 to-white inline-block leading-relaxed">La velada del año </span>
					<span class="text-yellow-300">III</span>
				</h1>
			</div>
		</header>
		<main class="relative">
			<section 
			id="boxeadores"
			class={`flex justify-between relative
			[&>div>img]:absolute [&>div>img]:bottom-0
			[&>div>img]:w-auto 
			[&>div>img]:animate-ease-in-out
			[&>div>img]:animate-duration-700
			h-[40vh] md:h-[65vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10
			`}
			>
			<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#131313] via-zinc-900 to-zinc-950">
			</div>

			<div class="absolute inset-0 flex gap-x-2 left-1/2 -translate-x-1/2 justify-center opacity-25">
				<div class="w-2 blur-sm h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-500"></div>
				<div class="w-2 blur-sm h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-500"></div>
				<div class="w-2 blur-sm h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-purple-100 via-purple-300 to-purple-500"></div>
			</div>

				<div class="relative w-full ">
					<img class="left-0 h-full z-50 " src="/boxer/coscu.webp" alt="Coscu">
					<img class="left-[5%] h-[80%] z-40 animate-fade-right 
					[clip-path:polygon(76%_13%,_80%_8%,_70%_2%,_46%_0,_28%_3%,_19%_12%,_12%_31%,_10%_48%,_9%_70%,_19%_72%,_23%_83%,_32%_89%,_32%_100%,_100%_100%,_100%_95%,_100%_84%,_85%_72%,_85%_56%,_87%_50%,_90%_46%,_88%_38%,_60%_30%,_69%_25%,_79%_17%)]
					" src="/boxer/mayichi.webp" alt="Mayichi">
					<img class="left-[15%] h-[75%] z-30 animate-fade-right animate-delay-300" src="/boxer/viruzz.webp" alt="Viruzz">
					<img class="left-[30%] h-[70%] z-20 animate-fade-right animate-delay-500" src="/boxer/fernanfloo.webp" alt="Fernanfloo">
					<img class="left-[42%] h-[68%] z-10 animate-fade-right animate-delay-700" src="/boxer/la-rivers.webp" alt="La Rivers">
					<img class="left-[45%] h-[63%] z-0 animate-fade-right animate-delay-[1000ms]" src="/boxer/papigavi.webp" alt="Papigavi">
				</div>
				<div class="relative w-full ">
					<img class="right-0 h-full z-50  " src="/boxer/german.webp" alt="German">
					<img class="right-[5%] h-[80%] z-40 animate-fade-left " src="/boxer/amouranth.webp" alt="Amouranth">
					<img class="right-[15%] h-[75%] z-30 animate-fade-left animate-delay-300" src="/boxer/shelao.webp" alt="Shelao">
					<img class="right-[30%] h-[70%] z-20 animate-fade-left animate-delay-500" src="/boxer/luzu.webp" alt="Luzu">
					<img class="right-[42%] h-[66%] z-10 animate-fade-left animate-delay-700" src="/boxer/rivers.webp" alt="Rivers">
					<img class="right-[45%] h-[63%] z-0 animate-fade-left animate-delay-1000" src="/boxer/ampeter.webp" alt="Ampeter">
				</div>
				
			</section>
			<div id="combat"
			class="opacity-0 absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2 flex flex-col gap-y-24"
			>
			<div class="px-5 pt-4 pb-2 bg-black text-white text-center">

				<h3 class="font-boxing-striped text-7xl">
					Mayichi
				</h3>
			</div>
			<span class="left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 font-boxing text-yellow-500 text-7xl block absolute [text-shadow:2px_2px_0px_red]">
				VS
			</span>
			<div class="px-5 pt-4 pb-2 bg-white text-black text-center">

				<h3 class="font-boxing-striped text-7xl">
					Amouranth
				</h3>
			</div>

			</div>
			<div id="info"
			class="block lg:absolute lg:bottom-48 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2"
			>
			<div class="flex flex-col">

				<div class="px-5 pt-4 pb-2 bg-white text-black text-center">

					<h2 class="font-boxing text-7xl">
						1 de JULIO
					</h2>
				</div>
				<div class="px-5 pt-2 pb-1 bg-black text-white text-center">
					
					<a class="hover:contrast-150 hover:scale-105 transition inline-block font-boxing text-[46px]" 
					href="https://twitch.tv/ibai" target="_blank" rel="noopener noreferrer">
					<span class="text-purple-100">twitch.tv/</span><span class="text-purple-600">ibai</span></a>
				</div>
				<div class="px-5 pt-2 pb-1 bg-sky-600 text-black text-center">
					<a class="hover:contrast-150 hover:scale-105 transition inline-block  font-boxing text-4xl text-white"
					href="https://twitch.tv/ibai" target="_blank" rel="noopener noreferrer">Comprar Entradas</a>

				</div>
			</div>
		

			</div>
		</main>
		<footer></footer>
	</body>
</html>

<style is:global>
	body{
		background-color: #131313;
	}

	@font-face{
		font-family: "Boxing";
		src: url('/fonts/BOXING.woff2') format("woff2");
		font-weight: bold;
		font-display: swap;
	}
	@font-face{
		font-family: "Boxing Striped";
		src: url('/fonts/BOXING-striped.woff2') format("woff2");;
		font-weight: bold;
		font-display: swap;
	}
</style>

<script>
	const $boxers = document.getElementById('boxeadores')
	const $boxersImages = $boxers.querySelectorAll('img')

	const $info = document.getElementById('info')
	const $combat = document.getElementById('combat')


	$boxersImages.forEach( $img =>{
		$img.addEventListener('mouseleave', ()=>{
			$boxersImages.forEach( $img =>{
				$img.setAttribute('style', "filter: blur(0) grayscale(0); transition: all 1s ease-in-out;")
			})

			//mostrar info
			$info.setAttribute('style', "opacity: 1; transition: all .3s ease-in-out")
			//ocultar combate
			$combat.setAttribute('style', "opacity: 0; transition: all .3s ease-in-out")
		})
		$img.addEventListener('mouseenter', ()=>{

			const sectionImages = $img.parentNode.children //seleciona el contenedor padre y devuelve todos sus hijos
			const position = Array.from(sectionImages).indexOf($img) //dentro del array con todos los hijos, que posición ocupa la imagen

			// get image for the left side and right side
			const [leftBoxers, rightBoxers ] = [
				$boxersImages[position], //seleccionar el luchador de la izquierda o derecha
				$boxersImages[position + $boxersImages.length / 2] // el contrincate
			]

			//ocultamos información
			$info.setAttribute('style', "opacity: 0; transition: all .3s ease-in-out")
			//mostrar información
			$combat.setAttribute('style', "opacity: 1; transition: all .3s ease-in-out")

			//nombre de los luchadores
			const [firstBoxerName, secondBoxerName] = $combat.querySelectorAll('h3')
			firstBoxerName.innerText = leftBoxers.alt
			secondBoxerName.innerText = rightBoxers.alt

			//ocultar los boxeadores que no interesan
			$boxersImages.forEach( $img => $img.setAttribute('style', "filter: blur(2px) grayscale(.6); transition: all 1s ease-in-out;"))

			leftBoxers.setAttribute('style', "scale: 1.05; contrast: 1.1; transition: all .3s ease-in-out ")
			rightBoxers.setAttribute('style', "scale: 1.05; contrast: 1.1; transition: all .3s ease-in-out ")

		})
	} )
</script>
